<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
             x:Class="LarkoCalcule.Views.BravoPage">
    <ContentPage.Content>
        <StackLayout>
            <forms:AnimationView 
	    x:Name="animationView" 	   
	    Animation="bravo.json" 
	    Loop="False" 
	    AutoPlay="True"	   
	    HeightRequest="300"
        WidthRequest="300"
                />

            <Frame Style="{StaticResource frameBravo}">
                <StackLayout>
                    <Label Style="{StaticResource textBravo}" Text="Bravo, c'est le bon résultat"/>
                </StackLayout>
            </Frame>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>