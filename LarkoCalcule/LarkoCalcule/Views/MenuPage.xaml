<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LarkoCalcule.Views.MenuPage">
    <ContentPage.Content>
        <StackLayout Padding="0" Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <StackLayout BackgroundColor="#8FB6CE" Padding="10,0,10,0" Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="Start">
                <Image Source="logo_Menu.png" />
                <Label Margin="0,60,0,20" Text="LARKO CALCULE" VerticalOptions="Center" HorizontalTextAlignment="Center" FontSize="40" TextColor="#FFFFFF">
                </Label>
            </StackLayout>
            <StackLayout Padding="10,0,10,0" Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="End">
                <Button Style="{StaticResource boutonLabStyle}" Margin="0,20,0,0 " x:Name="CompteurButton" HorizontalOptions="Center" Text="Compteur" WidthRequest="100" Clicked="CounterButtonClicked"/>
            </StackLayout>
            <StackLayout BackgroundColor="#8FB6CE" Padding="10,0,10,0" Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand">
                <Image Source="larko_Calcul_Menu.png" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>